{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"moduleResolution": "node",
		"esModuleInterop": true,
		"lib": ["DOM"],
		"strict": true,
		"noImplicitReturns": true,
		"importsNotUsedAsValues": "remove",
		"preserveValueImports": false,
		"paths": {
			// Don't even ask: https://github.com/vitejs/vite/issues/13027#issuecomment-1527384805
			"vite": ["./node_modules/vite"],
			"$lib/*": ["./src/lib/*"],
			"$lib": ["./src/lib"],
			"$client/*": ["./src/client/*"],
			"$client": ["./src/client"]
		},
		"types": ["jest"]
	}
}
