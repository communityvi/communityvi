{
	"compilerOptions": {
		"strict": true,
		"noImplicitReturns": true,
		"moduleResolution": "node",
		"module": "es2020",
		"lib": ["es2020", "dom"],
		"target": "es2019",
		"importsNotUsedAsValues": "remove",
		"isolatedModules": true,
		"resolveJsonModule": true,
		"sourceMap": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": ".",
		"allowJs": true,
		"checkJs": true,
		"paths": {
			"$lib/*": ["src/lib/*"],
			"$client/*": ["src/client/*"]
		},
		"types": ["jest"]
	},
	"include": ["src/**/*.d.ts", "src/**/*.js", "src/**/*.ts", "src/**/*.svelte", "tests/**/*.ts"]
}
