{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"moduleResolution": "node",
		"esModuleInterop": true,
		"lib": ["DOM"],
		"target": "ES2022",
		"strict": true,
		"noImplicitReturns": true,
		"importsNotUsedAsValues": "remove",
		"preserveValueImports": false,
		"paths": {
			"$lib/*": ["src/lib/*"],
			"$lib": ["src/lib"],
			"$client/*": ["src/client/*"],
			"$client": ["src/client"]
		},
		"types": ["jest"]
	},
	"include": ["src/**/*.d.ts", "tests/**/*.ts"]
}
