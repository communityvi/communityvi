{
	"name": "communityvi-frontend",
	"description": "Communityvi Frontend",
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"watch": "svelte-kit dev",
		"build": "svelte-kit build",
		"preview": "svelte-kit preview",
		"lint": "prettier --check --plugin-search-dir=. . && eslint --ignore-path .gitignore . && echo 'ESLint OK!' && svelte-check --fail-on-warnings --fail-on-hints && echo 'Svelte validate OK!'",
		"lint:fix": "prettier -w --plugin-search-dir=. . && eslint --ignore-path .gitignore . --fix && echo 'ESLint Fixed!'",
		"test": "jest tests",
		"test:coverage": "jest tests --coverage",
		"test:watch": "npm run test -- --watch",
		"format": "prettier --write --plugin-search-dir=. ."
	},
	"devDependencies": {
		"@fortawesome/fontawesome-free": "^6.0.0",
		"@sveltejs/adapter-static": "next",
		"@sveltejs/kit": "next",
		"@testing-library/jest-dom": "^5.16",
		"@testing-library/svelte": "^3.0",
		"@faker-js/faker": "^7.1.0",
		"@typescript-eslint/eslint-plugin": "^5.10",
		"@typescript-eslint/parser": "^5.10",
		"bulma": "^0.9",
		"eslint": "^8.8",
		"eslint-config-prettier": "^8.1",
		"eslint-plugin-svelte3": "^4.0",
		"jest": "^28.1.0",
		"jest-environment-jsdom": "^28.1.0",
		"jest-mock-extended": "^2.0.6",
		"prettier": "~2.6",
		"prettier-plugin-svelte": "^2.6",
		"sass": "^1.49",
		"svelte": "^3.46",
		"svelte-check": "^2.4",
		"svelte-jester": "^2.3.1",
		"svelte-preprocess": "^4.10",
		"ts-jest": "^28.0.0",
		"tslib": "^2.3",
		"typescript": "^4.6"
	}
}
