{
	"name": "communityvi-frontend",
	"description": "Communityvi Frontend",
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"watch": "vite dev",
		"build": "svelte-kit sync && vite build",
		"preview": "vite preview",
		"lint": "svelte-kit sync && prettier --check . && eslint . && echo 'ESLint OK!' && svelte-check --fail-on-warnings && echo 'Svelte validate OK!'",
		"lint:fix": "svelte-kit sync && prettier -w . && eslint . --fix && echo 'ESLint Fixed!'",
		"test": "vitest run",
		"test:coverage": "vitest run --coverage",
		"test:watch": "vitest watch",
		"format": "prettier --write ."
	},
	"devDependencies": {
		"@eslint/compat": "^2.0.0",
		"@eslint/eslintrc": "^3.1.0",
		"@eslint/js": "^9.8.0",
		"@faker-js/faker": "^10.0.0",
		"@fortawesome/fontawesome-free": "^7.0.0",
		"@sveltejs/adapter-static": "^3.0.0",
		"@sveltejs/kit": "^2.5.27",
		"@sveltejs/vite-plugin-svelte": "^6.0.0",
		"@types/node": "^24.0.0",
		"@vitest/coverage-v8": "^4.0.0",
		"bulma": "^1.0.0",
		"eslint": "^9.0.0",
		"eslint-config-prettier": "^10.0.0",
		"eslint-plugin-svelte": "^3.0.0",
		"globals": "^17.0.0",
		"jsdom": "^27.0.0",
		"prettier": "~3.8.0",
		"prettier-plugin-svelte": "^3.2.6",
		"sass": "^1.49",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"svelte-eslint-parser": "^1.0.0",
		"tslib": "^2.3",
		"typescript": "^5.5.0",
		"typescript-eslint": "^8.32.1",
		"vite": "^7.0.0",
		"vitest": "^4.0.0",
		"vitest-mock-extended": "^3.0.0"
	}
}
