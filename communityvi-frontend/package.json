{
  "name": "communityvi-frontend",
  "description": "Communityvi Frontend",
  "version": "0.0.1",
  "scripts": {
    "build": "rollup -c",
    "watch": "rollup -c -w",
    "start": "sirv public",
    "validate": "svelte-check",
    "test": "jest tests",
    "test:watch": "npm run test -- --watch"
  },
  "jest": {
    "transform": {
      "^.+\\.svelte$": [
        "svelte-jester",
        {
          "preprocess": true
        }
      ],
      "^.+\\.ts$": "ts-jest"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/tests/jest-setup.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "js",
      "svelte"
    ]
  },
  "devDependencies": {
    "@fortawesome/fontawesome-free": "^5.15",
    "@rollup/plugin-commonjs": "^17.0",
    "@rollup/plugin-node-resolve": "^11.0",
    "@rollup/plugin-typescript": "^6.0",
    "@testing-library/jest-dom": "^5.11",
    "@testing-library/svelte": "^3.0",
    "@tsconfig/svelte": "^1.0",
    "bulma": "^0.9",
    "jest": "^26.6",
    "rollup": "^2.3",
    "rollup-plugin-copy": "^3.3",
    "rollup-plugin-css-only": "^3.1",
    "rollup-plugin-livereload": "^2.0",
    "rollup-plugin-sass": "^1.2",
    "rollup-plugin-svelte": "^7.0",
    "rollup-plugin-terser": "^7.0",
    "svelte": "^3.0",
    "svelte-check": "^1.0",
    "svelte-jester": "^1.3",
    "svelte-preprocess": "^4.6",
    "ts-jest": "^26.5",
    "tslib": "^2.0",
    "typescript": "^3.9"
  },
  "dependencies": {
    "sirv-cli": "^1.0"
  }
}
