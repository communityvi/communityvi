{
	"name": "communityvi-frontend",
	"description": "Communityvi Frontend",
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"watch": "svelte-kit dev",
		"build": "svelte-kit build",
		"preview": "svelte-kit preview",
		"lint": "prettier --check --plugin-search-dir=. . && eslint --ignore-path .gitignore . && echo 'ESLint OK!' && svelte-check --fail-on-warnings --fail-on-hints && echo 'Svelte validate OK!'",
		"lint:fix": "prettier -w --plugin-search-dir=. . && eslint --ignore-path .gitignore . --fix && echo 'ESLint Fixed!'",
		"test": "jest tests",
		"test:coverage": "jest tests --coverage",
		"test:watch": "npm run test -- --watch",
		"format": "prettier --write --plugin-search-dir=. ."
	},
	"devDependencies": {
		"@fortawesome/fontawesome-free": "^5.15.4",
		"@sveltejs/adapter-static": "next",
		"@sveltejs/kit": "next",
		"@testing-library/jest-dom": "^5.16",
		"@testing-library/svelte": "^3.0",
		"@types/faker": "^5.5.9",
		"@typescript-eslint/eslint-plugin": "^5.6",
		"@typescript-eslint/parser": "^5.6",
		"bulma": "^0.9",
		"eslint": "^8.4",
		"eslint-config-prettier": "^8.1",
		"eslint-plugin-svelte3": "^3.2",
		"faker": "^5.5.3",
		"jest": "^26.6",
		"jest-mock-extended": "^2.0",
		"prettier": "~2.5",
		"prettier-plugin-svelte": "^2.5",
		"sass": "^1.44",
		"svelte": "^3.44",
		"svelte-check": "^2.2",
		"svelte-jester": "^1.5",
		"svelte-preprocess": "^4.9",
		"ts-jest": "^26.5",
		"tslib": "^2.3",
		"typescript": "^4.5"
	}
}
