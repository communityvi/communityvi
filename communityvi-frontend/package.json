{
	"name": "communityvi-frontend",
	"description": "Communityvi Frontend",
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"watch": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"lint": "prettier --check . && eslint --ignore-path .gitignore . && echo 'ESLint OK!' && svelte-check --fail-on-warnings && echo 'Svelte validate OK!'",
		"lint:fix": "prettier -w . && eslint --ignore-path .gitignore . --fix && echo 'ESLint Fixed!'",
		"test": "vitest run",
		"test:coverage": "vitest run --coverage",
		"test:watch": "vitest watch",
		"format": "prettier --write ."
	},
	"devDependencies": {
		"@faker-js/faker": "^8.0.0",
		"@fortawesome/fontawesome-free": "^6.0.0",
		"@sveltejs/adapter-static": "^2.0.2",
		"@sveltejs/kit": "^1.20.4",
		"@testing-library/svelte": "^4.2.3",
		"@typescript-eslint/eslint-plugin": "^7.0.0",
		"@typescript-eslint/parser": "^7.0.0",
		"bulma": "^1.0.0",
		"eslint": "^8.20",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-svelte": "^2.39.0",
		"prettier": "~3.2.0",
		"prettier-plugin-svelte": "^3",
		"sass": "^1.49",
		"svelte": "^4.0.0",
		"svelte-check": "^3.0.0",
		"tslib": "^2.3",
		"typescript": "^5.0.0",
		"vite": "^4.0.0",
		"vitest": "^1.6.0",
		"vitest-mock-extended": "^1.3.1",
		"vitest-dom": "^0.1.1",
		"@vitest/coverage-v8": "^1.6.0"
	}
}
